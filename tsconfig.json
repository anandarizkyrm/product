{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "lib": ["es6"],
    "rootDirs": ["src", "dist"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "jest.config.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}
